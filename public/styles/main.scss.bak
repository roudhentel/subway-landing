@font-face {
    font-family: 'HelveticaLT57';
    src: url("fonts/HelveticaNeueLTStd-Cn.otf") format("opentype");
    font-weight: normal;
    font-style: normal;
}

$green: #028940;
$light-green: #8bcd32;
$yellow: #ffc20d;
$white: #FFF;
$black: #4e4e4e;

body {
    font-family: HelveticaLT57;
    color: $white;

    .rounded-container {
        height: 100%;
        position: relative;
        .rounded-div {
            height: 130px;
            width: 130px;
            border-radius: 50%;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            position: relative;
    
            span {
                font-size: 110%;
            }
    
            i.fa {
                position: absolute;
                font-size: 350%;
                top: 50%;
            }
        }
    }

    .page-1 {
        width: 100%;
        overflow: auto;
        background-color: $green;
        background-size: cover;
        position: relative;
        overflow: hidden;
        //display: none;

        .page-1-1 {
            width: 100%;
            position: relative;
            img {
                width: 100%;
                position: absolute;
            }
        }

        .row {
            &.r1 {
                width: 50%;
                margin: auto;
            }

            &.logo {
                margin-top: 40px;

                img.subway {
                    width: 150px;
                }

                img.entwined {
                    width: 150px;
                }
            }

            &.line {
                margin-top: 30px;
                border-bottom: 1px solid #8bcd32;
            }

            &:nth-child(2) {
                margin-top: 35px;
            }

            &:nth-child(6) {
                margin-top: 15px;
            }

            &:nth-child(9) {
                margin-top: 30px;
            }

            &:nth-child(10) {
                margin-top: 20px;
            }

            &:nth-child(11) {
                height: 150px;
            }

            &.footer {
                &.f1 {
                    margin-top: 40px;
                }

                &.f2 {
                    position: relative;
                    height: 65px;
    
                    .rounded-div {
                        background-color: $green;
                        color: $yellow;
                        position: absolute;
                        left: 0;
                        right: 0;
                        margin-left: auto;
                        margin-right: auto;
                    }
                }

                &.f3 {
                    background-color: $white;
                    height: 130px;
                }
            }

            h2 {
                margin: 0;
                font-size: 500%;
                font-family: fantasy;
                color: $yellow;
            }

            h3 {
                margin: 0;
                font-size: 360%;
                font-family: fantasy;
                color: $white;
            }

            h4 {
                margin: 0;
                font-size: 220%;
                color: $yellow;
            }

            h5 {
                margin: 0;
                font-size: 170%;
                font-family: fantasy;
                color: $yellow;
                text-align: center;
            }

            ol {
                margin-top: 3px;
                padding-left: 11px;
                font-size: 90%;
            }
        }

        .next {
            position: absolute;
            bottom: 0;
            left: 0;
        }
    }
    
    .page-2 {
        display: none;
        width: 100%;
        overflow: auto;
        background-color: $white;
        overflow: hidden;
        color: $black;

        .row {
            &:nth-child(1) {
                h2 {
                    margin: 0;
                    color: $black;
                    font-size: 250%;
                    text-align: center;
                }
            }

            &:nth-child(2) {
                margin: 25px 0;
                h3 {
                    margin: 0;
                    color: $green;
                    font-family: fantasy;
                    font-size: 280%;
                    text-align: center;
                }
            }

            &.bundle {
                .part {
                    &:nth-child(1) {
                        display: flex;
                        flex-direction: column;
                        height: 400px;
                        border-right: 5px solid #e6e6e6;
                        border-bottom: 5px solid #e6e6e6;
    
                        .main-label {
                            text-align: right;
                            font-size: 170%;
                            font-family: fantasy;
                            color: $green;
                        }
    
                        .sub-label {
                            text-align: right;
                            font-size: 150%;
                            color: $light-green;
                        }
                    }
                    
                    &:nth-child(2) {
                        display: flex;
                        flex-direction: column;
                        height: 400px;
                        border-left: 5px solid #e6e6e6;
                        border-bottom: 5px solid #e6e6e6;

                        .main-label {
                            font-size: 170%;
                            font-family: fantasy;
                            color: $green;
                        }
    
                        .sub-label {
                            font-size: 150%;
                            color: $light-green;
                        }
                    }
                }
            }

            &.footer-2 {
                height: 130px;
                position: relative;
                background-color: $green;

                &.f1 {
                    height: 65px;
                    display: none;
                    background-color: $white;
                }

                .rounded-div {
                    position: absolute;
                    left: 0;
                    right: 0;
                    top: -50%;
                    margin: 0 auto;
                    color: $green;
                    background-color: $white;
                }
            }
        }
    }

    .page-3 {
        display: none;
        width: 100%;
        overflow: auto;
        background-color: $green;
        overflow: hidden;
        color: $yellow;
        height: 1500px;
    }
}
